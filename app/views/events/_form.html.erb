<%= simple_form_for @event, html: { class: 'form-horizontal' } do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :summary, placeholder: 'Event'%>
  <%= f.input :startDate, as: :date_picker, :label => 'Start Date'%>
  <%= f.input :startDateTime, label: "Start Time" %>
  <%= f.input :endDate, as: :date_picker, :label => 'End Date'%>
  <%= f.input :endDateTime, label: "End Time" %>
  <%= f.input :endTimeUnspecified, label: "All Day Event" %>
  <%= f.input :description %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
