<!DOCTYPE html>
<html>
<head>
  <title>CalendarApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>


<body>
    <div id="main-container" class="relative">
    	<div class="container">
				<nav class="navbar">
				  <div class="container-fluid">
				    <!-- Brand and toggle get grouped for better mobile display -->
				    <div class="navbar-header">
				      <a class="navbar-brand" id="brand" href="#">CALENDAR & TASKS</a>
				    </div>

				    <!-- Collect the nav links, forms, and other content for toggling -->
				    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				      <ul class="nav navbar-nav navbar-right">
				        <li class="active" id="nav"><a href="#">Month <span class="sr-only">(current)</span></a></li>
				        <li><a href="#" id="nav">Week</a></li>
				        <li class="dropdown" id="nav">
				          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
				          <ul class="dropdown-menu">
				            <li ><a href="#">Action</a></li>
				            <li><a href="#">Another action</a></li>
				            <li><a href="#">Something else here</a></li>
				            <li role="separator" class="divider"></li>
				            <li><a href="#">Separated link</a></li>
				          </ul>
				        </li>
				      </ul>
				    </div><!-- /.navbar-collapse -->
				  </div><!-- /.container-fluid -->
				</nav>

				<!-- Calendar partials -->
				<%= render partial: 'partials/calendar' %>

		      <div class="col-xs-4 col-xs-offset-1" id="absolute-right">
		      	<div class="col-xs-offset-4 col-xs-4">
		      		<p id="today-wdate"><%= Date.today.strftime("%A") %></p>
		      		<p id="today-month"><%= Date.today.strftime("%B") %></p>
		      	</div>
		      	<div class="col-xs-offset-1 col-xs-1">
		      		<p id="today-date"><%= Date.today.strftime("%d") %></p>
		      	</div>
	        	<br/><br/><br/><br/><br/>
	        	<%= yield %>
	      	</div>
		   	</div>
		  </div>
    </div>

</body>
</html>
